= form_with(model: element) do |form|
  - if element.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(element.errors.count, "error")
        prohibited this element from being saved:
      %ul
        - element.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.submit
