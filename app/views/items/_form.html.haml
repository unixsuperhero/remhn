= form_with(model: item) do |form|
  - if item.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - item.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :swamp, style: "display: block"
    = form.check_box :swamp
  %div
    = form.label :swamp_outcrop, style: "display: block"
    = form.check_box :swamp_outcrop
  %div
    = form.label :dessert, style: "display: block"
    = form.check_box :dessert
  %div
    = form.label :dessert_outcrop, style: "display: block"
    = form.check_box :dessert_outcrop
  %div
    = form.label :forest, style: "display: block"
    = form.check_box :forest
  %div
    = form.label :forest_outcrop, style: "display: block"
    = form.check_box :forest_outcrop
  %div
    = form.submit
