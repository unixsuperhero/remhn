= form_with(model: location) do |form|
  - if location.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(location.errors.count, "error")
        prohibited this location from being saved:
      %ul
        - location.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :terrain_id, style: "display: block"
    = form.text_field :terrain_id
  %div
    = form.submit
