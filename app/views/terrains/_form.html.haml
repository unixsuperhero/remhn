= form_with(model: terrain) do |form|
  - if terrain.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(terrain.errors.count, "error")
        prohibited this terrain from being saved:
      %ul
        - terrain.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.submit
