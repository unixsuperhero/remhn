= form_with(model: weakness) do |form|
  - if weakness.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(weakness.errors.count, "error")
        prohibited this weakness from being saved:
      %ul
        - weakness.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :monster_id, style: "display: block"
    = form.text_field :monster_id
  %div
    = form.label :element_id, style: "display: block"
    = form.text_field :element_id
  %div
    = form.submit
